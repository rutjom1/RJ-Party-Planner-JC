{
    "entities": {
        "TechProject": {
            "title": "Tech Project",
            "description": "Represents a tech project planned by a user.",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "startDate": {
                    "type": "string",
                    "format": "date"
                },
                "repoUrl": {
                    "type": "string",
                    "format": "uri"
                },
                "description": {
                    "type": "string"
                },
                "techStack": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string",
                    "format": "uri"
                },
                "imageHint": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "startDate",
                "repoUrl",
                "description",
                "imageUrl",
                "imageHint"
            ]
        }
    },
    "auth": {
        "providers": []
    },
    "firestore": {
        "/events/{eventId}": {
            "schema": {
                "$ref": "#/entities/TechProject"
            },
            "description": "Stores all tech projects."
        }
    }
}
